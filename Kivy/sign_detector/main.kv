# actual code starts here for main app
<Main>:
    id:main_window
    size_hint_x:1
    size_hint_y:1
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    AnchorLayout:
        id:main_box
        orientation:"vertical"
        anchor_x:"center"
        anchor_y:"center"

<FormBox@BoxLayout>
    padding:1
    spacing:1
    canvas.before:
        Color:
            rgba:(0,153/255,153/255,1)
        Rectangle:
            pos:self.pos
            size:self.size
<BackgroundBox@BoxLayout>
    padding:1
    spacing:1
    orientation:'vertical'
    canvas.before:
        Color:
            rgba:(.98,.98,.98,1)
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[10]
<RowBox@BoxLayout>
    orientation:'horizontal'
    size_hint_y:None
    size_hint_x:1
    height:100
    spacing:2
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[3]
<NumCount@Label>
    size_hint_x:.2
    size_hint_y:1
    text_size:self.size
    halign:'center'
    valign:'center'
    font_size:16
    color:(0,0,0,1)

<Description@Label>
    size_hint_x:.8
    size_hint_y:1
    text_size:self.size
    halign:'left'
    valign:'center'
    font_size:15
    color:(0,0,0,1)

<DesButton@BoxLayout+Button+ButtonBehavior>
    orientation:"horizontal"
    background_color:0,0,0,0
    size_hint_x:1
    size_hint_y:None
    height:80
    text_size:self.size
    padding:1
    canvas.before:
        Color:
            rgba:(1,1,1,1)if self.state=='normal' else (0,223/255,250/255,1)
        RoundedRectangle:
            pos:self.pos
            size:self.size 
            radius:[10] 
#rounded button 
<RoundedButton@Button>:
    background_color: 0,0,0,0
    background_normal:''
    text_size:self.size
    bold: True
    valign:'middle'
    halign:'center'
    font_size:20
    canvas.before:
        Color:
            rgba:(0,152/255,153/255,1)if self.state=='normal' else (0,.7,.7,1) 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

#home_window
<Home>:
    id:login_window #from this size can be changed
    size_hint_x:1
    size_hint_y:1
    orientation:'vertical'
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    
    FormBox:
        id:headings
        size_hint_x:1
        size_hint_y:.15
        Label:
            text:"Kids Training Software" 
            color:(1,1,1,1)
            font_size:20
            bold:True
            # height:50
            size_hint_y:1
    BoxLayout:
        size_hint_x:1
        size_hint_y:1
        padding:2
        orientation:'vertical'

        BackgroundBox:
            id:main_area
            size_hint_x:1
            size_hint_y:1
            orientation:'vertical'
            padding:3
            spacing:5    
                    
            RoundedButton:
                text:"Adventure"
                size_hint_y:.5
                on_press:root.modes_window()
            RoundedButton:
                text:"Tutorial"
                size_hint_y:.5
                on_press:root.tutorial_window()
            RoundedButton:
                id:btn_score
                text:"Score"
                size_hint_y:.5
    BoxLayout:
        size_hint_x:1
        size_hint_y:.10
            
