                        valign:'center'
                    MDLabel:
                        text:'Customer Management'
                        font_size:18
                        bold:True
                        text_size:self.size
                        valign:'center'
                        halign:'center'
                    MDLabel:
                        size_hint_x:0.1
            MDBoxLayout:
                id:working_area
                size_hint:1,0.92
                padding:0
                canvas.before:
                    Color:
                        # rgba:(159/255.0,159/255.0,159/255.0,1)
                        rgba:(.9,.9,.9,1)
                    Rectangle:
                        pos:self.pos
                        size:self.size
                MDBoxLayout:
                    id:welcome_page
                    size_hint:1,1
                    orientation:'vertical'
                    padding:1
                    spacing:10
                    MDBoxLayout:
                        orientation:"horizontal"
                        size_hint:1,0.07
                        MDLabel:
                            text:"Name"
                            font_size:12
                            color:(0,0,0,1)
                            text_size:self.size
                            halign:'center'
                            valign:'center'
                            bold:True
                        MDLabel:
                            text:"Phone"
                            font_size:12
                            color:(0,0,0,1)
                            text_size:self.size
                            halign:'center'
                            valign:'center'
                            bold:True
                        MDLabel:
                            text:"Location"
                            font_size:12
                            color:(0,0,0,1)
                            text_size:self.size
                            halign:'center'
                            valign:'center'
                            bold:True
                        MDLabel:
                            text:"Date"
                            font_size:12
                            color:(0,0,0,1)
                            text_size:self.size
                            halign:'center'
                            valign:'center'
                            bold:True
                    MDBoxLayout:
                        size_hint:1,0.73
                        id:testBox
                        orientation:'vertical'
                        spacing:4
                        canvas.before:
                            Color:
                                rgba:(1,1,1,1)
                            Rectangle:
                                pos:self.pos
                                size:self.size
                        
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            size:self.size
                            bar_width:10
                            bar_color: 0, 0, 0, .21   # red
                            effect_cls: "ScrollEffect"
                            scroll_type: ['bars', 'content']
                            GridLayout:
                                id:row_widget_box
                                height:self.minimum_height
                                cols:1
                                size_hint_y: None
                                orientation: 'tb-lr'#'vertical'
                                spacing:1
                                padding:1
                                # RowButton:
                                # RowButton:

                    MDBoxLayout:
                        size_hint:1,.20  
                        padding:15
                        orientation:"vertical"
                        spacing:5
                        # MDRoundFlatButton:
                        #     text:"Refresh Table"
                        #     font_size:18
                        #     size_hint_x:1
                        #     theme_text_color: "Custom"
                        #     text_color: 0, 0, 0, 1
                        #     on_release: root.show_records()
                        MDRoundFlatButton:
                            text:"Add Customer"
                            font_size:18
                            size_hint_x:1
                            theme_text_color: "Custom"
                            text_color: 0, 0, 0, 1
                            on_release: root.load_Add_customer_page()
                                         
